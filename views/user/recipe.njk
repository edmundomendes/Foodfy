{% extends "./layout.njk" %}

   {% block title %}
        <title>Foodfy / Receita</title>
    {% endblock title %}
{% block content %}

<div class="recipe_details_image">
    <img src={{ recipe.image_url }}>
</div>

<div class="recipe_details_info">
    <h1>{{ recipe.title }}</h1>
    <p>{{ recipe.author }}</p>
</div>

<div class='recipe_details_ingredients'>
    <h2>Ingredientes</h2>
    <a class="button">Esconder</a>
    <ul class='hide active'>
        {% for ingredient in recipe.ingredients%}
        <li>{{ingredient}}</li>
        {%endfor%}
    </ul>
</div>
    
<div class="recipe_details_preparation">
    <h2>Modo de preparo</h2>
    <a class="button">Esconder</a>
    <ul class='hide active'>
        {%for preparations in recipe.preparation%}
        <li>{{preparations}}</li>
        {%endfor%}
    </ul>
</div>

<div class="recipe_details_information">
    <h2>Infomações adicionais</h2>
    <a class="button">Esconder</a>
    <p class='hide active'>{{recipe.information}}</p>
</div>

    
    <script src="./script.js"></script>
    
{% endblock %}