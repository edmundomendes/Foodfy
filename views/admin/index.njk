{% extends './layout.njk' %}

{%block header%}
    <a href="/admin/create" class='button_form' id="index_form">Nova receita</a>
{%endblock header%}


{% block content %}

    <h2>Gerenciar receitas</h2>

     

<div class='container'>

    {% for recipe in recipes %}

        <div class='admin_image'>
            <img src="{{recipe.image_url}}" alt="">
        
        <div class="container_index_details">
            <h4>{{recipe.title}}</h4>
            <p>por {{recipe.author}}</p>
            <a href="/admin/{{recipe.id}}">Visualizar</a>
        </div>
        </div>

    {% endfor %}
    
</div>

{% endblock content %}
